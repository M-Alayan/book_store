@using Microsoft.AspNetCore.Identity;
@inject SignInManager<User> signinmanager

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Book Store</title>
    <link href="~/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="~/css/StyleSheet.css" rel="stylesheet" />
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/twitter-bootstrap/js/bootstrap.js"></script>
    <script src="~/js/JavaScript.js"></script>
    


</head>
<body>

    <div class="wrapper">
        <!-- Sidebar Holder -->
        @if (signinmanager.IsSignedIn(User))
        {
            <nav id="sidebar">
                <div class="sidebar-header">
                    <h3>Book Store</h3>
                </div>

                <ul class="list-unstyled components">

                    <p>Menu</p>
                   


                        <li>
                            <a asp-controller="Category" asp-action="Index">Category Section</a>

                        </li>
                        <li>
                            <a asp-controller="Author" asp-action="Index">Authors Section</a>
                        </li>
                        <li>
                            <a asp-controller="Book" asp-action="Index">Books Section</a>
                        </li>
                        <li>
                            <a asp-action="role" asp-controller="Account">Add Role</a>
                        </li>
                    
                </ul>

                <ul class="list-unstyled CTAs">
                   
                        <li><a asp-action="logout" asp-controller="Account" class="article">Logout</a></li>
                    
                </ul>
            </nav>}

        <!-- Page Content Holder -->

        <div id="content">

            <nav class="navbar navbar-default">
                <div class="container-fluid">

                    <div class="navbar-header">
                        <button type="button" id="sidebarCollapse" class="navbar-btn">
                            <span></span>
                            <span></span>
                            <span></span>
                        </button>
                    </div>


                    <div class="nav navbar-nav" id="bs-example-navbar-collapse-1">
                        <ul class="nav navbar-nav navbar-right">
                            @if (signinmanager.IsSignedIn(User))
                            {
                                <li><a href="#"><span class="glyphicon glyphicon-align-center"> @User.Identity.Name</span></a></li>
                            }
                            else
                            {
                                <li><a asp-action="Index" asp-controller="Account"><span class="glyphicon glyphicon-user"></span> Sign Up</a></li>
                                <li><a asp-action="signin" asp-controller="Account"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
                            }
                        </ul>
                    </div>
                </div>
            </nav>


            @RenderBody()
        </div>
    </div>

</body>
</html>
